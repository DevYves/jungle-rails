<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
    <% if product.quantity < 1 %>
      <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
      <%end%>
    <%else%>
      <%= link_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
      <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
      <% end %>
    <%end%>
  </footer>
  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
   <% if product.quantity <= 0 %>
    <aside class="sold-out">
       SOLD OUT!
     </aside>
   <% end %>
   Average Rating:
  <aritcle>
 <span class="label label-primary">
   <% @ratings = Review.where(product_id: product.id).pluck(:rating) %>
     <% if @ratings.size != 0 %>
       <% @average = @ratings.sum.to_f/@ratings.size %>
      <%= @average %>
      <% else %>
       No Reviews Yet
     <% end %>
 </span></a><br>
</article>

