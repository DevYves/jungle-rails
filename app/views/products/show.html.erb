<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
<!-- Display Products -->
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    </article>


<h2>Reviews</h2>

  <%= form_for :review, url: [@product, @review], method: "POST" do |form| %>
    <div class="form-group">
      <label>Rating</label>

      <%= form.select :rating, [1, 2, 3, 4, 5] %>
    </div>
    <div class="form-group">

      <%= form.text_area :description %>
    </div>
    <%= form.submit %>
  <% end %>

<table class="table table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Review</th>
          <th>Rating</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>

        <% @product.reviews.each do |review| %>
        <tr>
          <td><%= reviewer(review.user_id) %></td>
          <td><%= review.description %></td>
          <td><%= review.rating %></td>
          <td><%= link_to fa_icon('trash'), review, class: 'btn btn-sm', method: :delete, data: { confirm: "Are you sure?" } %>Delete</td>
        </tr>
          <% end %>

      </tbody>

    </table>







</section>